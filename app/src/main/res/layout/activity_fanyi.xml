<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_zt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:src="@drawable/value" />

    <EditText
        android:id="@+id/ed_text_mword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:drawableLeft="@drawable/btn_fanyi"
        android:layout_marginRight="20dip"
        android:hint="请输入要翻译的内容"
        android:gravity="center_vertical"
        android:textColor="@color/night_biz_pc_gold_chart_green" />

    <Button
        android:id="@+id/btn_fanyi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="翻译"
        android:background="@drawable/btn_changecolor"
        android:textColor="@color/base_action_bar_title_weather_color"/>
    
    <TextView 
        android:id="@+id/tv_text_english"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lines="5"
        android:gravity="top"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginRight="20dip"
        android:textColor="@color/night_biz__chat_vote_blue"
        style="?android:attr/listSeparatorTextViewStyle"/>

</LinearLayout>